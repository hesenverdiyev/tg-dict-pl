<%- include('partials/header', { title: 'About Us - InnovateTech Solutions' }) %>

<div class="page-header bg-primary text-white py-5 mt-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 fw-bold"><%= data.about.title %></h1>
                <p class="lead">Learn more about our company and values</p>
            </div>
        </div>
    </div>
</div>

<section class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <img src="<%= data.about.image %>" alt="About Us" class="img-fluid rounded shadow">
            </div>
            <div class="col-lg-6">
                <h2 class="fw-bold mb-4">Our Story</h2>
                <p class="text-muted mb-4"><%= data.about.description %></p>
                <div class="row g-4">
                    <div class="col-sm-6">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="fas fa-award text-primary fs-3"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="fw-bold mb-1">10+ Years</h6>
                                <small class="text-muted">Industry Experience</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="fas fa-users text-primary fs-3"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="fw-bold mb-1">500+</h6>
                                <small class="text-muted">Happy Clients</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mb-4">
                <div class="mission-card h-100 p-4 bg-white rounded shadow">
                    <div class="mb-3">
                        <i class="fas fa-bullseye text-primary fs-2"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Our Mission</h4>
                    <p class="text-muted"><%= data.about.mission %></p>
                </div>
            </div>
            <div class="col-lg-6 mb-4">
                <div class="vision-card h-100 p-4 bg-white rounded shadow">
                    <div class="mb-3">
                        <i class="fas fa-eye text-primary fs-2"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Our Vision</h4>
                    <p class="text-muted"><%= data.about.vision %></p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="fw-bold mb-4">Our Values</h2>
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="value-item text-center">
                            <i class="fas fa-handshake text-primary fs-1 mb-3"></i>
                            <h5 class="fw-bold">Integrity</h5>
                            <p class="text-muted">We conduct business with the highest ethical standards.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="value-item text-center">
                            <i class="fas fa-star text-primary fs-1 mb-3"></i>
                            <h5 class="fw-bold">Excellence</h5>
                            <p class="text-muted">We strive for perfection in everything we do.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="value-item text-center">
                            <i class="fas fa-heart text-primary fs-1 mb-3"></i>
                            <h5 class="fw-bold">Passion</h5>
                            <p class="text-muted">We love what we do and it shows in our results.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer') %>